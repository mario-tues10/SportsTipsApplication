@page
@model BetExpertWeb.Pages.PredictionsCreationModel
@{
    ViewData["Title"] = "Sports Prediction Form";
}
<head>
    <link rel="stylesheet" href="~/css/predictions.css" asp-append-version="true" />
</head>
<body>
    <h2>@ViewData["Title"]</h2>
    @if (Model.IsSubmitted)
    {
        <div class="alert alert-success">
            <p>Your prediction has been submitted. Thank you!</p>
        </div>
    }
    else
    {
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prediction.HomeTeam">Home Team:</label>
                <input asp-for="Prediction.HomeTeam" class="form-control"/>
                <span asp-validation-for="Prediction.HomeTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prediction.AwayTeam">Away Team:</label>
                <input asp-for="Prediction.AwayTeam" class="form-control" />
                <span asp-validation-for="Prediction.AwayTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prediction.Analysis">Analysis:</label>
                <input asp-for="Prediction.Analysis" rows="5" class="form-control" />
                <span asp-validation-for="Prediction.Analysis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prediction.FinalPrediction">Final Prediction:</label>
                <input asp-for="Prediction.FinalPrediction" class="form-control" />
                <span asp-validation-for="Prediction.FinalPrediction" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit Prediction</button>
        </form>
    }
</body>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}