@page
@model BetExpertWeb.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
@ViewData["ErrorMessage"];
<h2>Log a user</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Login.Username">Username:</label>
        <input asp-for="Login.Username" class="form-control" />
        <span asp-validation-for="Login.Username" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Login.Email">Email:</label>
        <input asp-for="Login.Email" class="form-control" />
        <span asp-validation-for="Login.Email" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Login.Password">Password:</label>
        <input asp-for="Login.Password" class="form-control" />
        <span asp-validation-for="Login.Password" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" name="rememberMe">
        <label class="form-check-label" for="remember">Remember me</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Login</button>
    <br>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
